{
  "name": "node-typescript-starter",
  "version": "1.0.0",
  "description": "Boilerplate project typescript",
  "main": "index.js",
  "scripts": {
    "start": "npm run watch",
    "watch": "nodemon --exec ./node_modules/.bin/ts-node -- ./server/server.ts",
    "lint": "tslint --project ./tsconfig.json 'src/**/*.{ts,tsx}'",
    "build": "npx tsc",
    "test": "SET NODE_ENV=test&& mocha -r ts-node/register server/tests/*.test.ts --timeout 5000"
  },
  "author": "Luca Campana",
  "license": "ISC",
  "dependencies": {
    "bcrypt": "^2.0.1",
    "body-parser": "^1.18.2",
    "express": "^4.16.3",
    "mongodb": "^3.0.7",
    "mongoose": "^5.0.16",
    "tslint-config-airbnb": "^5.8.0",
    "validator": "^9.4.1",
    "jsonwebtoken": "^8.2.1"
  },
  "devDependencies": {
    "@types/bcrypt": "^1.0.0",
    "@types/expect": "^1.20.3",
    "@types/express": "^4.11.1",
    "@types/jsonwebtoken": "^7.2.6",
    "@types/mocha": "^5.2.0",
    "@types/mongodb": "^3.0.15",
    "@types/mongoose": "^5.0.10",
    "@types/node": "^9.6.5",
    "@types/supertest": "^2.0.4",
    "@types/validator": "^9.4.1",
    "expect": "^22.4.3",
    "mocha": "^5.1.1",
    "nodemon": "^1.17.3",
    "supertest": "^3.0.0",
    "ts-node": "^6.0.0",
    "tslint": "^5.9.1",
    "tslint-sonarts": "^1.6.0",
    "typescript": "^2.8.1"
  }
}
